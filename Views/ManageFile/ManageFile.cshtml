@model Tachyon.Models.ManageFile

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" asp-action="ManageFile" class=" form-horizontal bg-blue-200 p-2 text-dark bg-opacity-80" max-width:800px; margin:50px auto;>
    <div class=" border border-dark p-3">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <div class=" form-group row">
            <h2 class=" text-black-50"> Add new patient</h2>
        </div>
        <div class=" form-group">
            <label asp-for="Name"></label>
            <div col-sm-5>
                <input asp-for="Name" class=" form-control" id="validationName" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Name" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="Surname"></label>
            <div col-sm-10>
                <input asp-for="Surname" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Surname" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="Gender"></label>
            <div col-sm-10>
                <select id="GenderDropdown" asp-for="Gender" class=" form-control" id="validationName" required>
                    <option value="Male"> Male</option>
                    <option value="Female">Female</option>
                    
                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Gender" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="DateOFBirth"></label>
            <div col-sm-10>
                <input asp-for="DateOFBirth" class=" form-control" id="validationAbility" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="DateOFBirth" class=" text-danger"></span>
            <div class=" form-group">
                <label asp-for="Race"></label>
                <div col-sm-10>
                    <input asp-for="Race" class=" form-control" id="validationWeakness" required />
                </div>
                <div class="invalid-feedback">
                </div>
                <span asp-validation-for="Race" class=" text-danger"></span>
            </div>
        </div>

        <div class=" form-group row">
            <div class=" col-8 offset-2 row">
                <div class=" col">
                    <input type="submit" class="btn-blue-300 btn-lg  " value="create" />
                </div>
                <div class=" col-1">
                    <a asp-action="FileList" class=" btn btn-blue-300btn-lg ">Files</a>
                </div>
            </div>
        </div>

    </div>


</form>

 
